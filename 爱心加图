#include<graphics.h>

#define NUM 46
struct point
{
	int x, y;
};
int main() {
	initgraph(800, 800);
	struct point arr[NUM] =
	{
		{395, 268 },
		{406, 222 },
		{416, 193 },
		{441, 162 },
		{468, 133 },
		{500, 117 },
		{537, 105 },
		{577, 107 },
		{617, 120 },
		{649, 146 },
		{666, 173 },
		{680, 211 },
		{683, 247 },
		{680, 293 },
		{675, 338 },
		{660, 385 },
		{640, 440 },
		{616, 484 },
		{588, 529 },
		{557, 573 },
		{530, 610 },
		{493, 645 },
		{460, 675 },
		{422, 696 },
		{381, 676 },
		{350, 654 },
		{320, 626 },
		{292, 606 },
		{257, 570 },
		{230, 540 },
		{200, 500 },
		{180, 470 },
		{160, 430 },
		{140, 390 },
		{126, 342 },
		{117, 293 },
		{120, 250 },
		{133, 203 },
		{160, 170 },
		{200, 140 },
		{240, 130 },
		{280, 135 },
		{312, 146 },
		{340, 170 },
		{360, 195 },
		{375, 230 }
	};

	

	for (int i = 0; i < NUM; i++) {
		settextcolor(RGB(rand() % 256, rand() % 256, rand() % 256));//修改颜色
		Sleep(100);
		outtextxy(arr[i].x, arr[i].y, L"");
	}

	IMAGE mv;
	loadimage(&mv, L"521.bmp" );//取图
	putimage(0, 0, &mv);  //打印图
	while (1);
	return 0;
}
